{
  "name": "backup-update",
  "version": "1.0.0",
  "description": "Check for and install Checkpoint updates from GitHub. Supports checking for updates without installing and shows changelog for new versions",
  "author": "Checkpoint",
  "category": "maintenance",
  "tags": ["update", "upgrade", "version", "maintenance"],
  "command": "./run.sh",
  "arguments": {
    "schema": {
      "type": "object",
      "properties": {
        "check-only": {
          "type": "boolean",
          "default": false,
          "description": "Check for updates without installing"
        }
      }
    }
  },
  "examples": [
    {
      "description": "Update to latest version",
      "command": "/backup-update"
    },
    {
      "description": "Check if updates available",
      "command": "/backup-update --check-only"
    }
  ]
}
