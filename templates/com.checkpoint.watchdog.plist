<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.checkpoint.watchdog</string>

    <key>ProgramArguments</key>
    <array>
        <string>INSTALL_DIR_PLACEHOLDER/bin/checkpoint-watchdog.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>HOME_PLACEHOLDER/.checkpoint/logs/watchdog.out</string>

    <key>StandardErrorPath</key>
    <string>HOME_PLACEHOLDER/.checkpoint/logs/watchdog.err</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin:HOME_PLACEHOLDER/.local/bin</string>
    </dict>
</dict>
</plist>
